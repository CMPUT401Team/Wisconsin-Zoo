<div class="images">
  <% for src, i in @sources: %>
    <figure><img src="<%= src %>" /></figure>
  <% end %>
</div>

<div class="toggles">
  <% for src, i in @sources: %>
    <button name="toggle" value="<%= i %>"><%= i + 1 %></button>
  <% end %>
</div>

<div class="changer-controls">
  <button type="button" name="play"><i rel="play"></i></button>
  <button type="button" name="pause"><i rel="pause"></i></button>
</div>
