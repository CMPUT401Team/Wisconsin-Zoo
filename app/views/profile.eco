<% translate = require 't7e' %>

<!-- TODO: "Load more" button titles need to be translated. -->

<div class="sign-in"></div>

<div class="user-profile">
  <nav>
    <button name="turn-page" value="favorites"><%- translate 'span', 'profile.favorites' %></button>
    <button name="turn-page" value="recents"><%- translate 'span', 'profile.recents' %></button>
  </nav>

  <div class="favorites page">
    <p class="none"><%- translate 'span', 'profile.noFavorites' %></p>
    <ul></ul>
    <hr />

    <p class="more">
      <button name="load-more" value="favorite" disabled="disabled" title="<%- translate 'profile.loadMore' %>">+</button>
    </p>
  </div>

  <div class="recents page">
    <p class="none"><%- translate 'span', 'profile.noRecents' %></p>
    <ul></ul>
    <hr />

    <p class="more">
      <button name="load-more" value="recent" disabled="disabled" title="<%- translate 'profile.loadMore' %>">+</button>
    </p>
  </div>
</div>
