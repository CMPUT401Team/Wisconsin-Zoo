html {
  background: url("./images/big-wood.jpg") fixed center top;
  font-family: "Open Sans", sans-serif;
  margin: 0;
  overflow-y: scroll;

  body {
    margin: 0;
    padding: 0 0 100px;
    position: relative;

    > h1 {
      color: $white;
      font: normal 30px Georgia, serif;
      letter-spacing: 10px
      margin: 30px 0;
      position: relative;
      text-align: center;
      text-shadow: 0 2px 3px $black;
      text-transform: uppercase;
      z-index: 1;

      a {
        color: inherit;
        text-decoration: none;
      }
    }

    > nav {
      paper-stripe();
      background: $white;
      bottom: 0;
      box-shadow: 0 0 3px $black;
      padding: 25px 0 15px;
      position: fixed;
      text-align: center;
      width: 100%;
      z-index: 3;

      ul {
        margin: 0;
        padding: 0;

        li {
          display: inline-block;
          width: 15%;
          border-left: 1px solid #fff;
          box-shadow: -2px 0 0 -1px $gray;

          a {
            color: inherit;
            display: block;
            line-height: 40px;
            opacity: 0.75;
            text-align: center;
            text-decoration: none;
            width: 100%;

            &:hover,
            &.active {
              opacity: 1;
            }
          }
        }
      }
    }

    .before-load {
      color: $white;
      font-size: 12px;
      font-weight: bold;
      text-align: center;
      text-shadow: 0 1px 1px $black
    }

    .zooniverse-top-bar {
      #zooniverse-top-bar-container {
        background: $white;
      }

      #zooniverse-top-bar-button {
        background: $white;
        margin-left: -500px;
      }
    }
  }
}

#main {
  position: relative;
  z-index: 1;

  > * {
    display: none;

    &.active {
      display: block;
    }
  }

  > .content-page {
    paper-stripe();
    background: $white;
    box-shadow: 0 3px 10px $black;
    color: $black;
    margin: 0 auto;
    padding: 33px 50px;
    position: relative;
    width: 700px;
  }
}
