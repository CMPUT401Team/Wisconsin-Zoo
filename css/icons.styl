@font-face {
  font-family: "icons";
  font-style: normal;
  font-weight: normal;
  src: url("fonts/icons.eot");
  src: url("fonts/icons.eot?#iefix") format('embedded-opentype'), url("fonts/icons.woff") format('woff'), url("fonts/icons.ttf") format('truetype'), url("fonts/icons.svg#icons") format('svg');
}

i {
  display: inline-block;
  height: 1em;
  line-height: 1em;
  position: relative;
  overflow: hidden;
  text-indent: 100%;
  white-space: nowrap;
  width: 1em;

  &:before {
    font-family: icons;
    font-style: normal;
    font-weight: normal;
    height: 100%;
    left: 0;
    position: absolute;
    text-align: center;
    text-decoration: none;
    text-indent: 0;
    top: 0;
    width: 100%;
  }

  &[rel="pause"]:before       {content: '\2389';}
  &[rel="stop"]:before        {content: '\25aa';}
  &[rel="play"]:before        {content: '\25b6';}
  &[rel="star"]:before        {content: '\2605';}
  &[rel="star-empty"]:before  {content: '\2606';}
  &[rel="heart-empty"]:before {content: '\2661';}
  &[rel="heart"]:before       {content: '\2665';}
  &[rel="flag"]:before        {content: '\2691';}
  &[rel="comment"]:before     {content: '\e718';}
  &[rel="chat"]:before        {content: '\e720';}
  &[rel="location"]:before    {content: '\e724';}
  &[rel="twitter"]:before     {content: '\f304';}
  &[rel="facebook"]:before    {content: '\f308';}
  &[rel="picture"]:before     {content: '\1f304';}
  &[rel="thumbs-up"]:before   {content: '\1f44d';}
  &[rel="thumbs-down"]:before {content: '\1f44e';}
  &[rel="pin"]:before         {content: '\1f4cc';}
  &[rel="search"]:before      {content: '\1f50d';}
}
