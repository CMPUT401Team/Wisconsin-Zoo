$black = #140b03;
$white = #f9f8f3;

$red = #d32323;
$red-dark = #7c011c;

$green = #525b46;
$green-light = #85937a;
$green-dark = #2b2e27;

$gray = #dcdcdc;

standard-button() {
  background: $green-dark;
  border: 1px solid $black;
  border-radius: 2px;
  box-shadow: 0px 1px 0px #3f4438 inset;
  box-sizing: border-box;
  color: $gray;
  display: inline-block;
  font: inherit;
  padding: 3px 8px 3px 8px;
  position: relative;
  text-decoration: none;
  text-shadow: 0 1px 1px $black;
  vertical-align: middle;

  &:hover {
    border-color: #000;
  }

  &:active {
    box-shadow: 0 1px 2px rgba($black, 0.33) inset;
  }
}
