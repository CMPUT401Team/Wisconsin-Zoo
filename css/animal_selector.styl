        &[data-animal="warthog"]          .image {background-position: -2px -2880px;}
        &[data-animal="waterbuck"]        .image {background-position: -2px -2952px;}
        &[data-animal="wildcat"]          .image {background-position: -2px -3024px;}
        &[data-animal="wildebeest"]       .image {background-position: -2px -3096px;}
        &[data-animal="zebra"]            .image {background-position: -2px -3168px;}
        &[data-animal="zorilla"]          .image {background-position: -2px -3240px;}
        &[data-animal="human"]            .image {background-position: -2px -3384px;}
      }

      &[data-items="lots"] [data-animal] {
        font-size: 12px;
        height: 6.25%;
        padding: 1px 0 0 3px;
        width: 33.33%;

        .image {
          display: none;
        }
      }

      &[data-items="20"] [data-animal] {
        height: 10%;
        padding-top: 7px;
        text-align: center;
        width: 50%;

        .image {
          display: none;
        }
      }

      &[data-items="10"] [data-animal],
      &[data-items="5"] [data-animal] {
        clearfix();
        height: 20%;
        text-align: center;
        width: 50%;

        .image {
          float: left;
          height: 68px;
          overflow: hidden;
          text-indent: -15px;
          width: 68px;
        }

        .label {
          float: left;
          margin-left: 10px;
          line-height: 64px;
        }
      }

      &[data-items="5"] [data-animal] {
        width: 100%;
      }

      .none {
        display: none;
        font-size: 12px;
        margin-top: 125px;
        text-align: center;

        button[name="clear-filters"] {
          text-decoration: underline;
        }
      }

      &[data-items="0"] .none {
        display: block;
      }
    }
  }

  .animal-details {
    background: $black;
    background: rgba($black, 0.9);
    border-radius: 4px;
    border-width: 75px 5px 5px;
    box-shadow: 0 1px 1px rgba($white, 0.33) inset;
    box-sizing: border-box;
    font-size: 12px;
    height: 100%;
    left: 0;
    opacity: 1;
    overflow: auto;
    padding: 10px;
    position: absolute;
    top: 0;
    transform: scale(1);
    transition: opacity 0.25s ease-in-out, transform 0.25s ease-in-out;
    width: 100%;
    z-index: 1;

    &.hidden {
      transform: scale(0.95);
      opacity: 0;
    }

    .image-changer {
      position: relative;
      top: 0;

      .images {
        border-bottom: 1px solid $black;
        box-shadow: 0px 1px 1px -1px rgba($white, 0.5);
        overflow: hidden;
        position: relative;

        figure {
          height: 200px;
          margin: 0;
          left: 0;
          position: absolute;
          top: 0;

          &.active {
            position: relative;
            z-index: 1;
          }

          img {
            max-width: 100%;
          }
        }
      }

      .toggles {
        position: absolute;
        right: 0;
        top: 100%;

        button[name="toggle"] {
          standard-toggle();

          &:before {
            background: $green-dark;
          }
        }
      }
    }

    .content {
      height: 165px;
      overflow: auto;

      p.label {
        font-size: 24px;
        margin: 10px 0 -10px;
      }
    }

    .options {
      .group {
        margin: 10px 0;
      }

      label {
        display: inline-block;
      }
    }

    .action {
      bottom: 0;
      font-weight: bold;
      padding: 10px;
      position: absolute;
      right: 0;
      text-align: center;

      > label {
        display: inline-block;
        margin: 0 5px;
      }

      button[name="cancel"] {
        standard-button($red);
      }

      button[name="identify"] {
        standard-button($green-really);
      }
    }
  }

  .aux {
    left: 0;
    margin: 10px 0;
    position: absolute;
    text-align: right;
    top: 100%;
    width: 100%;

    button {
      font-size: 10px;
      margin: 0 7px;
      text-align: center;
      width: 120px;
    }
  }
}
