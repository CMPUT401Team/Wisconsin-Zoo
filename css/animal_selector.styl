.animal-selector {
  background: $green-dark;
  border: 1px solid rgba($black, 0.75);
  border-radius: 5px;
  box-shadow: 0 2px 1px rgba($white, 0.25) inset, 0 1px 2px $black;
  box-sizing: border-box;
  color: $white;
  float: right;
  height: 435px;
  margin-top: 5px;
  outer-deboss: 7px;
  padding: 10px;
  position: relative;
  width: 405px;

  .general-filters {
    background: rgba($black, 0.33);
    border-radius: 3px;
    box-shadow: 0 2px 3px rgba($black, 0.5) inset;
    box-sizing: border-box;
    height: 50px;
    padding: 10px 5px;
    position: relative;
    text-align: left;

    .filter-menu {
      font-size: 14px;
      line-height: 30px;
      position: absolute;
      z-index: 1;

      button[name="characteristic"] {
        padding: 0 20px 0 10px;
        position: relative;
        text-shadow: 0 1px 1px $black;

        &:hover {
          box-shadow: 0 0 0 1px rgba($white, 0.5) inset;
        }

        &:after {
          border: 4px solid transparent;
          border-top-color: $white;
          content: "";
          height: 0;
          margin-top: -2px;
          position: absolute;
          right: 5px;
          top: 50%;
          width: 0;
        }
      }

      .menu {
        background: $white;
        box-shadow: 0 2px 3px $black;
        color: $green-dark;
        font-size: 12px;
        overflow: hidden;
        padding-top: 2px;
        right: 0;
        text-align: center;
        top: 100%;
        white-space: nowrap;

        button {
          border-top: 1px solid $gray;
          box-sizing: border-box;
          display: block;
          min-width: 100%;
          padding: 0 10px;

          &:hover,
          &.selected {
            background: $green;
            color: $white;
          }

          img {
            display: none;
          }
        }

        &.hidden {
          display: none;
        }
      }

      &.open {
        button[name="characteristic"] {
          background: $white;
          border-bottom: 1px solid $gray;
          color: $green-dark;
          text-shadow: none;
        }
      }
    }

    .search {
      display: inline-block;
      float: right;
      margin: 5px 5px 0 0;
      position: relative;

      i[rel="search"] {
        font-size: 12px;
        left: 7px;
        position: absolute;
        top: 4px;
        z-index: 1;
      }

      input[name="search"] {
        appearance: none;
        background: $black;
        border: 2px solid rgba($gray, 0.5);
        border-radius: 20px;
        box-sizing: border-box;
        color: $white;
        font-family: inherit;
        font-size: 12px;
        height: 20px;
        padding: 0 10px 0 20px;
        vertical-align: top;
        width: 160px;
      }
    }
  }

  .characteristic-filters {
    clearfix();
    padding: 5px 0;
    position: relative;

    .filter-menu {
      box-sizing: border-box;
      float: left;
      margin-left: 7px;
      width: 71px;

      &:first-child {
        margin-left: 0;
      }

      button[name="characteristic"] {
        standard-button();
        float: left;
        font-size: 12px;
        font-weight: bold;
        height: 22px;
        padding: 0;
        position: relative;
        text-overflow: ellipsis;
        white-space: nowrap;
        width: 100%;
      }

      .menu {
        background: lighten($green, 0.33);
        border: 1px solid $black;
        bottom: 100%;
        box-sizing: border-box;
        font-size: 12px;
        height: 50px;
        left: 0;
        opacity: 1;
        position: absolute;
        width: 100%;
        z-index: 1;

        &.hidden {
          display: none;
        }

        button[name="characteristic-value"] {
          float: left;
          position: relative;

          img {
            background: black;
            height: 40px;
            margin: 4px 0 0 4px;
            width: 40px;
          }

          .label {
            background: $gold;
            bottom: 100%;
            border-radius: 3px;
            box-shadow: 0 1px 2px $black;
            color: $black;
            display: none;
            font-size: 10px;
            font-weight: bold;
            left: 50%;
            margin: 0 0 3px -10px;
            padding: 2px 10px;
            position: absolute;
            white-space: nowrap;
            z-index: 1;

            &:after {
              border: 5px solid transparent;
              border-top-color: $gold;
              content: "";
              left: 5px;
              position: absolute;
              top: 100%;
            }
          }

          &:hover .label {
            display: block;
          }

          &.selected img {
            box-shadow: 0 0 0 1px $white;
          }
        }

        button[name="clear-characteristic"] {
          standard-button();
          float: right;
          margin: 11px 7px 0 0;
          text-align: center;
        }
      }

      &.open button[name="characteristic"] {
        background: lighten($green, 0.33);

        &:after {
          border: 6px solid transparent;
          border-bottom-color: lighten($green, 0.33);
          bottom: 100%;
          content: "";
          height: 0;
          margin: 0 0 -1px -6px;
          position: absolute;
          left: 50%;
          width: 0;
        }
      }

      &.in-use button[name="characteristic"] {
        background: rgba($white, 0.25);
      }
    }
  }

  .selection-area {
    background: rgba($black, 0.33);
    border-radius: 3px;
    box-shadow: 0 2px 3px rgba($black, 0.5) inset;

    .items {
      clearfix();
      margin: 0 -1px;
      min-height: 330px;
      position: relative;

      [data-animal] {
        border: 1px solid $green-dark;
        box-sizing: border-box;
        cursor: pointer;
        float: left;
        font-size: 14px;
        opacity: 1;
        transition: opacity 0.25s ease-in-out;

        &:hover {
          background: rgba($black, 0.5);
        }

        &.dimmed {
          opacity: 0.33;
        }

        &.hidden {
          display: none;
        }
      }

      &[data-items="gt20"] [data-animal] {
        font-size: 12px;
        padding: 1px 0 0.67px 5px;
        width: 33.33%;

        img {
          display: none;
        }
      }

      &[data-items="20"] [data-animal] {
        padding: 8px 0 7px;
        text-align: center;
        width: 50%;

        img {
          display: none;
        }
      }

      &[data-items="10"] [data-animal],
      &[data-items="5"] [data-animal] {
        clearfix();
        padding: 0;
        text-align: center;
        width: 50%;

        .image {
          float: left;
          height: 64px;
          overflow: hidden;
          text-indent: -15px;
          width: 64px;

          img {
            height: 100%;
          }
        }

        .label {
          float: left;
          margin-left: 10px;
          line-height: 64px;
        }
      }

      &[data-items="5"] [data-animal] {
        width: 100%;
      }

      .none {
        display: none;
        font-size: 12px;
        margin-top: 125px;
        text-align: center;

        button[name="clear-filters"] {
          text-decoration: underline;
        }
      }

      &[data-items="0"] .none {
        display: block;
      }
    }
  }

  .animal-details {
    background: rgba($black, 0.9);
    border-width: 75px 5px 5px;
    box-shadow: 0 1px 1px rgba($white, 0.33) inset;
    box-sizing: border-box;
    font-size: 12px;
    height: 100%;
    left: 0;
    opacity: 1;
    overflow: auto;
    padding: 10px;
    position: absolute;
    top: 0;
    transform: scale(1);
    transition: opacity 0.25s ease-in-out, transform 0.25s ease-in-out;
    width: 100%;
    z-index: 1;

    &.hidden {
      transform: scale(0.95);
      opacity: 0;
    }

    .image-changer {
      position: relative;
      top: 0;

      .images {
        border-bottom: 1px solid $black;
        box-shadow: 0px 1px 1px -1px rgba($white, 0.5);
        overflow: hidden;
        position: relative;

        figure {
          height: 200px;
          margin: 0;
          left: 0;
          position: absolute;
          top: 0;

          &.active {
            position: relative;
            z-index: 1;
          }

          img {
            max-width: 100%;
          }
        }
      }

      .toggles {
        position: absolute;
        right: 0;
        top: 100%;

        button[name="toggle"] {
          standard-toggle();

          &:before {
            background: $green-dark;
          }
        }
      }
    }

    .content {
      height: 140px;

      p.label {
        font-size: 24px;
        margin: 10px 0 -10px;
      }
    }

    .action {
      bottom: 0;
      border-radius: 5px;
      border-top: 1px solid $black;
      box-shadow: 0 1px 1px rgba($white, 0.25) inset;
      font-weight: bold;
      height: 25px;
      left: 0;
      padding: 10px 0;
      position: absolute;
      text-align: center;
      width: 100%;

      > label {
        display: inline-block;
        margin: 0 5px;
      }

      button[name="cancel"] {
        standard-button($red);
      }

      button[name="identify"] {
        standard-button($green-really);
      }
    }
  }
}
