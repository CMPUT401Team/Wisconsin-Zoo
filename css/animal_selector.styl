        &[data-animal="porcupine"]        .image {background-position: -2px -2232px;}
        &[data-animal="reedbuck"]         .image {background-position: -2px -2304px;}
        &[data-animal="reptiles"]         .image {background-position: -2px -2376px;}
        &[data-animal="rhinoceros"]       .image {background-position: -2px -2448px;}
        &[data-animal="rodents"]          .image {background-position: -2px -2520px;}
        &[data-animal="secretaryBird"]    .image {background-position: -2px -2592px;}
        &[data-animal="serval"]           .image {background-position: -2px -2664px;}
        &[data-animal="topi"]             .image {background-position: -2px -2736px;}
