.animal-details {
  background: $black;
  border-radius: 4px;
  border-width: 75px 5px 5px;
  box-shadow: 0 1px 1px rgba($white, 0.33) inset;
  box-sizing: border-box;
  font-size: 12px;
  height: 100%;
  left: 0;
  opacity: 1;
  overflow: hidden;
  padding: 10px;
  position: absolute;
  top: 0;
  transform: scale(1);
  transition: opacity 0.25s ease-in-out, transform 0.25s ease-in-out;
  width: 100%;
  z-index: 1;

  &:focus {
    outline: none;
  }

  &.hidden {
    transform: scale(0.95);
    opacity: 0;
  }

  .image-changer {
    position: relative;
    top: 0;

    .images {
      border-bottom: 1px solid $black;
      box-shadow: 0px 1px 1px -1px rgba($white, 0.5);
      overflow: hidden;
      position: relative;

      figure {
        height: 200px;
        margin: 0;
        left: 0;
        position: absolute;
        top: 0;

        &.active {
          position: relative;
          z-index: 1;
        }

        img {
          max-width: 100%;
        }
      }
    }

    .toggles {
      position: absolute;
      right: 20px;
      top: 100%;

      button[name="toggle"] {
        @extend #standard-toggle;

        &:before {
          background: $green-dark;
        }
      }
    }
  }

  .image-changer-shortcuts {
    height: 0;
    left: 0;
    position: absolute;
    top: 0;
    width: 0;
    overflow: hidden;
  }

  .content {
    height: 135px;
    overflow: auto;

    p.label {
      font-size: 24px;
      margin: 10px 0 -10px;
    }
  }

  .options {
    bottom: 0;
    left: 0;
    position: absolute;
    width: 100%;

    .group {
      border-top: 1px solid rgba($green, 0.5);
      padding: 5px;

      .title {
        color: $gray;
        display: inline-block;
        width: 6em;
      }

      &.count,
      &.behavior {
        clearfix();

        label {
          cursor: pointer;

          > input {
            opacity: 0.01;
            position: absolute;
          }

          > .label {
            @extend #standard-button;
            padding: 2px 5px;
          }

          > input:checked + .label {
            background: $green-really;
          }
        }
      }
    }
  }

  .action {
    bottom: 0;
    font-weight: bold;
    padding: 2px;
    position: absolute;
    right: 0;

    button {
      line-height: 12px;

      &[name="cancel"] {
        @extend #standard-button;
        background: $red;
      }

      &[name="identify"] {
        @extend #standard-button
        background: $green-really;
      }
    }
  }
}
