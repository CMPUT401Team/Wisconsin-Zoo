$open-sans-condensed = "Open Sans Condensed", "Arial Narrow", sans-serif

.explore
  
  .controls
    margin-left 225px
    
    .classification-buttons
      outer-deboss(3px)
      display inline-block
      position relative
      margin-right 260px
    
      input[type='radio']
        display none
      
        &:checked + label
          box-shadow 0 1px 0 rgba($black, 0.25) inset
          border-color $black;
          background rgb(103, 102, 82)
      label
        @extend #standard-button
        font-size 10px
    
    .animals
      width 400px
      background $black
      position absolute
      top 130px
      display none
      z-index 3
      left 741px
      
      &.active
        display block
        
      &[data-index='2']
        left 875px
      
      [data-animal]
        background $green-dark
        width 130px
        border 1px solid $black
        border-color rgba($black, 0.5)
        box-sizing border-box
        color $gray
        display inline-block
        font inherit
        font-size 10px
        padding 3px 8px 3px 8px
        position relative
        text-align center
        text-decoration none
        text-shadow 0 1px 1px $black
        vertical-align middle
        margin 0
        cursor pointer

        &:hover
          background $green-light

        &:active
          box-shadow 0 1px 0 rgba($black, 0.25) inset
          opacity 0.75
    
    button.species {
      @extend #standard-button
      font-size 10px
      padding-right 20px
      width 130px
      
      &:after {
        border: 4px solid transparent;
        border-top-color: $white;
        content: "";
        height: 0;
        margin-top: -2px;
        position: absolute;
        right: 5px;
        top: 50%;
        width: 0;
      }
    }
        
    .slider
      display inline-block
  
    .ui-slider
      position: relative
      height 7px
      width 300px
      padding-right 7px
      opacity .7
      background $green-dark
      border-radius 5px
  
    .ui-slider-handle
      background $green-light
      border 1.5px solid $black
      border-color rgba($black, 0.5)
      width 14px
      height 14px
      bottom 7px
      border-radius 7px
      box-shadow 0px 1px 0px rgba($white, 0.125) inset, 0 1px 3px rgba($black, 0.75)
      box-sizing border-box
      color $gray
      display inline-block
      position relative
  
  .map-container
    position fixed
    top 160px
    bottom 0
    left 0
    right 0
    
    .dates, .legend
      background rgba(0, 0, 0, .1)
      width 200px
      border-radius 3px
      color $black
      font inherit
      font-weight 700
      padding 8px 0
      position absolute
      top 20px
      right 20px
      text-align center
      text-decoration none
      vertical-align middle
      display table-column
      margin 0 auto
      font-size 12px
      z-index 4
    
    .legend
      width 130px
      height 36px
      opacity 0
      top 60px
      text-align right
      padding 6px
      border-radius 5px
      font-size 11px
      font-weight 400
      z-index 9
      
      transition all 800ms cubic-bezier(0.770, 0.000, 0.175, 1.000)
      -webkit-transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
      -moz-transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
      transition-timing-function cubic-bezier(0.770, 0.000, 0.175, 1.000)
      
      input
        display none
      
      input:checked + label
        border 2px solid #333
        box-sizing border-box
      
      label
        width 12px
        height 12px
        border-radius 6px
        display inline-block
        background #D32323
        cursor pointer

      label:last-child
        background #525B46
        margin-top 4px
      
      span:nth-child(2)
        margin 0 0 10px
      span.animal-name
        display inline-block
        text-align right
        padding-right 10px
        
      span.color
        display inline-block
        text-align left
        padding 0 3px
        
        &:nth-child(2)
          background #d32323
        &:last-child
          background #525b46
    
    img.spinner
      position absolute
      right 20px
      top 20px
      z-index 10
    
    .map
      min-height inherit
      height 100%
      border-top 1px solid $green-dark
