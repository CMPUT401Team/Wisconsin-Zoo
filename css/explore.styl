$open-sans-condensed = "Open Sans Condensed", "Arial Narrow", sans-serif

.explore
  height 100%
  
  .tools
    width 100%
    height 30px
    padding 0 20%
      
    select.filter
      width 140px
      margin 0 20px
      
    .classification-buttons
      background rgba(20, 11, 3, 0.25)
      -webkit-border-radius 5px
      border-radius 5px
      -webkit-box-shadow 0 1px 2px rgba(20, 11, 3, 0.50) inset, 0 -1px 0px rgba(249, 248, 243, 0.25) inset
      box-shadow 0 1px 2px rgba(20, 11, 3, 0.50) inset, 0 -1px 0px rgba(249, 248, 243, 0.25) inset
    
    .tool
      float left
    
    input[type='radio']
      display none
      
      &:checked + label
        box-shadow 0 1px 0 rgba($black, 0.25) inset
        border-color $black;
        background rgb(103, 102, 82)
    label
      @extend #standard-button
      float right
      font-size 12px
      margin 0 6px
  
  .map-container
    clear both
    width 100%
    height 100%
    margin 20px 0 0 0
    min-height 700px
    background #505050
    
    .map
      min-height inherit
      height 100%
