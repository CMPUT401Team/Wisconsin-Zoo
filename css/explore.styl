$open-sans-condensed = "Open Sans Condensed", "Arial Narrow", sans-serif

.explore
  height 100%
  
  .controls
    width 100%
    padding-left 225px
    
    .classification-buttons
      outer-deboss(3px)
      display inline-block
      position relative
      margin-right 260px
    
      input[type='radio']
        display none
      
        &:checked + label
          box-shadow 0 1px 0 rgba($black, 0.25) inset
          border-color $black;
          background rgb(103, 102, 82)
      label
        @extend #standard-button
        font-size 10px
      label:last-child
        margin-right 4px
    
    .animals
      width 400px
      background $black
      position absolute
      top 26px
      display none
      z-index 3
      left 745px
      
      &.active
        display block
        
      &[data-position='right']
        left 879px
      
      [data-animal]
        background $green-dark
        width 130px
        border 1px solid $black
        border-color rgba($black, 0.5)
        box-sizing border-box
        color $gray
        display inline-block
        font inherit
        font-size 10px
        padding 3px 8px 3px 8px
        position relative
        text-align center
        text-decoration none
        text-shadow 0 1px 1px $black
        vertical-align middle
        margin 0
        cursor pointer

        &:hover
          background $green-light

        &:active
          box-shadow 0 1px 0 rgba($black, 0.25) inset
          opacity 0.75
        
    button.species {
      @extend #standard-button
      font-size 10px
      padding-right 20px
      width 130px
      
      &:after {
        border: 4px solid transparent;
        border-top-color: $white;
        content: "";
        height: 0;
        margin-top: -2px;
        position: absolute;
        right: 5px;
        top: 50%;
        width: 0;
      }
    }
    
    .species-select
      background rgba($black, 0.25)
      border-radius 3px
      box-shadow 0 1px 2px rgba($black, 0.5) inset, 0 -1px 0px rgba($white, 0.25) inset
      left -1px
      padding 1px 0px 3px
      margin-right 24px
      position relative
      top -1px
      width 280px
      // display inline-block
      display none
      text-align center
        
    .slider
      display inline-block
      margin-right 125px
  
    .ui-slider
      position: relative
      height 7px
      width 300px
      padding-right 7px
      opacity .7
      background $green-dark
      border-radius 5px
  
    .ui-slider-handle
      background $green-light
      border 1.5px solid $black
      border-color rgba($black, 0.5)
      width 14px
      height 14px
      bottom 7px
      border-radius 7px
      box-shadow 0px 1px 0px rgba($white, 0.125) inset, 0 1px 3px rgba($black, 0.75)
      box-sizing border-box
      color $gray
      display inline-block
      position relative
  
  .map-container
    width 100%
    height 100%
    margin 20px 0 0 0
    min-height 700px
    
    .dates
      background rgba(0, 0, 0, .1)
      width 400px
      border-radius 3px
      color $black
      font inherit
      font-weight 700
      padding 8px 0
      position relative
      top 20px
      right -500px
      text-align center
      text-decoration none
      vertical-align middle
      display block
      margin 0 auto
      font-size 12px
      z-index 4
    
    img.spinner
      position absolute
      right 20px
      top 20px
      z-index 10
    
    .map
      min-height inherit
      height 100%
