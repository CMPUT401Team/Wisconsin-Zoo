.subject-viewer {
  display: inline-block;
  float: left;

  &:focus {
    // For now, so Miller doesn't kill me.
    // TODO: Make it clear that this is in focus.
    outline: 0;
  }

  .images {
    position: relative;

    figure {
      border: 5px solid $white;
      box-sizing: border-box;
      height: 410px;
      left: 0;
      margin: 0;
      opacity: 0;
      overflow: hidden;
      position: absolute;
      top: 0;
      width: 580px;

      &.active {
        box-shadow: 0 3px 5px rgba($black, 0.33);
        opacity: 1;
        position: relative;
        z-index: 1;
      }

      &.satellite {
        left: 0;
        position: absolute;
        top: 0;
      }

      img {
        display: block;
        width: 100%;
      }
    }

    .annotations {
      color: $white;
      font-size: 10px;
      font-weight: bold;
      opacity: 0.75;
      position: absolute;
      left: 10px;
      text-shadow: 0 0 1px $black, 0 0 1px $black, 0 0 1px $black, 0 0 2px $black, 0 0 2px $black;
      top: 10px;
      z-index: 1;

      &:hover {
        opacity: 1;
      }

      .annotation-item {
        border-radius: 20px;
        clear: left;
        float: left;
        padding: 0 5px 0 10px;

        &:hover {
          background: rgba($black, 0.75);
        }

        button[name="delete"] {
          border-radius: 50%;
          height: 1em;
          line-height: 1em;
          text-align: center;
          width: 1em;
        }
      }
    }

    .sign-in,
    .favorite {
      background: $red;
      color: $white;
      font-size: 12px;
      font-weight: bold;
      position: absolute;
      transition: padding 0.25s ease-out;
      z-index: 1;

      > button {
        position: relative;
        z-index: 1;
      }
    }

    .sign-in {
      box-shadow: 0 1px 1px rgba($black, 0.5);
      padding: 0 10px;
      right: -3px;
      top: 10px;

      &:hover {
        padding-right: 15px;
      }

      &:before,
      &:after {
        border: 10px solid rgba($red, 0);
        content: "";
        position: absolute;
        left: -10px;
      }

      &:before {
        border-top-color: $red;
        top: 0;
      }

      &:after {
        border-bottom-color: $red;
        bottom: 0;
      }
    }

    .favorite {
      display: none;
      font-size: 16px;
      padding: 5px 5px 0;
      right: 10px;
      top: -3px;

      &:hover {
        padding-top: 10px;
      }

      &:before,
      &:after {
        border: 15px solid transparent;
        content: "";
        position: absolute;
        bottom: -15px;
      }

      &:before {
        border-left-color: $red;
        left: 0;
      }

      &:after {
        border-right-color: $red;
        right: 0;
      }

      button[name="unfavorite"] {
        color: $gold;
        display: none;
        text-shadow: 0 1px 1px $black;
      }
    }
  }

  .controls {
    color: darken($brown, 67%);
    font-size: 14px;
    line-height: 1;
    margin: 10px 4px 4px;
    position: relative;
    text-shadow: 0 1px 0 rgba($white, 0.25);

    .play button,
    .finished button {
      standard-button();
      font-weight: bold;
      height: 24px;
      outer-deboss: 4px;
      padding: 0 20px;
      position: relative;
      width: 150px;
    }

    button[name="pause"] {
      display: none;
    }

    .toggles {
      margin-left: 10px;
    }

    button[name="toggle"] {
      standard-toggle();
    }

    .satellite {
      margin-left: 5px;
    }

    button[name="satellite"] {
      vertical-align: -2px;

      &.active {
        color $white;
        text-shadow: 0 1px 1px $black;
      }
    }

    .finished {
      float: right;

      .skip-label {
        cursor: pointer;
        display: none;
        font-size: 12px;
        font-weight: bold;
        margin-right: 10px;
      }
    }
  }

  &.playing .controls .play {
    button[name="play"] {
      display: none;
    }

    button[name="pause"] {
      display: inline-block;
    }
  }

  &.favorite .images .favorite {
    button[name="favorite"] {
      display: none;
    }

    button[name="unfavorite"] {
      display: inline-block;
    }
  }

  &.no-annotations .controls .finished .skip-label {
    display: inline-block;
  }
}

.signed-in .subject-viewer .images {
  .sign-in {
    display: none;
  }

  .favorite {
    display: inline;
  }
}
