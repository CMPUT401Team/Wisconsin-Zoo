.subject-viewer {
  display: inline-block;
  float: left;
  -webkit-tap-highlight-color: transparent;

  &:focus {
    // For now, so Miller doesn't kill me.
    // TODO: Make it clear that this is in focus.
    outline: 0;
  }

  .images {
    position: relative;

    .subject-image {
      border: 5px solid $white;
      box-sizing: border-box;
      left: 0;
      margin: 0;
      overflow: hidden;
      top: 0;
      width: 580px;

      img {
        display: block;
        width: 100%;
      }
    }

    .annotations {
      color: $white;
      font-size: 10px;
      font-weight: bold;
      position: absolute;
      left: 10px;
      text-shadow: 0 0 1px $black, 0 0 1px $black, 0 0 1px $black, 0 0 2px $black, 0 1px 2px $black;
      top: 10px;
      z-index: 1;

      .annotation-item {
        transition: background 0.5s ease-in-out;
        border-radius: 20px;
        clear: left;
        float: left;
        padding: 1px 5px 1px 10px;

        &.new {
          background: $gold;
        }

        &:hover {
          transition: none;
          background: rgba($black, 0.75);
        }

        button[name="delete"] {
          border-radius: 50%;
          height: 1em;
          line-height: 1em;
          text-align: center;
          width: 1em;
        }
      }
    }

    .extra-message {
      background: rgba($black, 0.75);
      bottom: 5px;
      color: $white;
      display: none;
      font-size: 12px;
      font-weight: bold;
      left: 5px;
      padding: 10px;
      position: absolute;
      right: 5px;
      text-align: center;
      text-shadow: 0 1px 1px $black;
      z-index: 1;
    }

    .sign-in,
    .favorite {
      background: $red;
      color: $white;
      font-size: 12px;
      font-weight: bold;
      position: absolute;
      transition: padding 0.25s ease-out;
      z-index: 1;

      > button {
        position: relative;
        z-index: 1;
      }
    }

    .favorite {
      display: none;
      font-size: 16px;
      padding: 5px 5px 0;
      right: 10px;
      top: -3px;

      &:hover {
        padding-top: 10px;
      }

      &:before,
      &:after {
        border: 15px solid transparent;
        content: "";
        position: absolute;
        bottom: -15px;
      }

      &:before {
        border-left-color: $red;
        left: 0;
      }

      &:after {
        border-right-color: $red;
        right: 0;
      }

      button[name="unfavorite"] {
        color: $gold;
        display: none;
        text-shadow: 0 1px 1px $black;
      }
    }
  }

  .controls,
  .followup {
    color: darken($brown, 67%);
    font-size: 14px;
    margin: 15px 0 4px;
    position: relative;
    text-shadow: 0 1px 0 rgba($white, 0.25);
  }

  .controls {

    .finished {
      float: right;

      .nothing-label {
        cursor: pointer;
        display: none;
        font-size: 12px;
        font-weight: bold;
        margin-right: 10px;
      }

      button {
        width: 120px;
      }
    }
  }

  .followup {
    display: none;

    button[name="not-done"] {
      background: rgba($black, 0.5);
      border-radius: 15px;
      color: $white;
      font-size: 10px;
      margin-right: 10px;
      padding: 0 10px;
      text-shadow: none;
    }

    .group {
      display: inline-block;
      margin: 0 5px;
      outer-deboss: 4px;
      position: relative;

      &.continue {
        float: right;
      }

      a,
      button {
        @extend #standard-button;
        padding-left: 32px;

        i {
          color: $black;
          border-right: 1px solid rgba($black, 0.5);
          box-shadow: 2px 0 1px -1px rgba($white, 0.25);
          height: 22px;
          left: 0
          line-height: 20px;
          position: absolute;
          top: 3px;
          text-shadow: 0 1px 0 rgba($white, 0.25);
          width: 24px;
        }
      }

      button[name="next"] {
        background: darken($green-really, 25%);

        &:active {
          background: darken($green-really, 50%);
        }
      }
    }
  }

  &.zoomed .images figure {
    cursor: -moz-grab;

    img {
      position: absolute;
      width: 1200px;
    }
  }

  &.dragging .images figure {
    cursor: -moz-grabbing;
  }

  &.favorite .images .favorite {
    button[name="favorite"] {
      display: none;
    }

    button[name="unfavorite"] {
      display: inline-block;
    }
  }

  &.no-annotations .controls .finished .nothing-label {
    display: inline-block;
  }

  &.finished {
    .images .extra-message {
      display: block;
    }

    .controls {
      display: none;
    }

    .followup {
      display: block;
    }
  }
}

.signed-in .subject-viewer .images {
 
  .favorite {
    display: inline;
  }
}
