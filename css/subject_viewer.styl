.subject-viewer
  display: inline-block
  position: relative
  float: left
  outline: none

  .image-and-filters
    background: white
    border-radius: 5px
    box-sizing: border-box
    padding: 10px 10px 94px 10px

    .filter-menu
      font-size: 14px;
      line-height: 30px;
      z-index: 1;
      color: $dark-grey-font

      button[name="characteristic"]
        position: relative;

        &:hover
          box-shadow: 0 0 0 1px rgba($white, 0.5) inset;

        &:after
          border: 4px solid transparent;
          border-top-color: $dark-grey-font;
          content: "";
          height: 12px;
          width: 20px;
          display: inline-block;
          margin-top: -2px;
          position: absolute;
          right: -20px;
          top: 50%;
          width: 0;

      .menu
        clearfix()
        border: 2px solid #ddd;
        border-radius: 5px;
        font-size: 12px;
        right: 0;
        text-align: center;
        top: 100%;
        white-space: nowrap;

        button
          box-sizing: border-box;
          padding: 0 10px;

          &:hover,
          &.selected
            background-color: #ddd;

          img
            display: none;

        &.hidden
          display: none;

      &.open
        button[name="characteristic"]
          background: $white;
          color: $green;
          text-shadow: none;

  .images
    position: relative

    .subject-image
      box-sizing: border-box;
      left: 0;
      margin: 0;
      overflow: hidden;
      top: 0;
      width: 570px
      @media $phone-or-smaller
        min-height: 0;

      img
        display: block;
        width: 100%;

    .annotations
      color: $white;
      font-size: 12px;
      font-weight: 300;
      position: absolute;
      left: 5px;
      top: 5px;
      z-index: 1;
      height: 42px;
      overflow: scroll;
      @media $classifier-vertical-stack-breakpoint
        width: 100%
        left: 0px;

      .annotation-item
        transition: background 0.2s;
        border-radius: 20px;
        display: inline-block;
        float: left;
        margin: 2px;
        background: $green;
        padding: 1px 5px 1px 10px;

        &.new
          background: $gold;

        &:hover
          transition: none;
          background: $red;
          cursor: default;

        button[name="delete"]
          border-radius: 50%;
          height: 1em;
          line-height: 1em;
          text-align: center;
          width: 1em;
          &:hover
            cursor: pointer;

    .extra-message
      background: rgba($black, 0.75);
      bottom: 5px;
      color: $white;
      display: none;
      font-size: 12px;
      font-weight: bold;
      left: 5px;
      padding: 10px;
      position: absolute;
      right: 5px;
      text-align: center;
      z-index: 1;

    .sign-in,
    .favorite
      background: $green-light;
      color: white;
      font-size: 12px;
      font-weight: bold;
      position: absolute;
      transition: padding 0.25s ease-out;
      z-index: 1;

      > button
        position: relative;
        z-index: 1;

    .favorite
      font-size: 16px;
      padding: 5px 5px 0;
      right: 20px;
      top: -5px;

      &:hover
        padding-top: 10px;

      &:before,
      &:after
        border: 15px solid transparent;
        content: "";
        position: absolute;
        bottom: -15px;

      &:before
        border-left-color: $green-light;
        left: 0;

      &:after
        border-right-color: $green-light;
        right: 0;

      button[name="favorite"]
        &:not(:active)
          transform scale(1.0)
          transition 0.5s transform
        &:active
          transform scale(1.3)
        &.favorited
          svg
            path
              fill $red
  .controls,
  .followup
    font-size: 14px;
    margin: 0;
    margin-right: 0px;
    position: absolute
    right: 13px
    bottom: 12px
    z-index: 1;
    text-align: right;

    @media $classifier-vertical-stack-breakpoint
      left: auto;
      width: auto;
      right: 0%;
      top: 485px;
      margin-right: 5px;

    @media $classifier-full-width-breakpoint
      padding: 5px;

  .controls
    .finished
      float: right;

      .nothing-label
        cursor: pointer;
        display: none;
        font-size: 12px;
        font-weight: bold;
        color: $dark-grey-font;
        margin-right: 10px;

      button
        @extend .classifier-action-button

  .followup
    display: none;

    button[name="not-done"]
      background: rgba($black, 0.5);
      border-radius: 15px;
      color: $white;
      font-size: 10px;
      margin-right: 10px;
      padding: 0 10px;
      text-shadow: none;

    .group
      display: inline-block;
      position: relative;
      float: right;
      margin-left: 5px;

      a,
      button
        @extend #standard-button;
        padding-left: 32px;
        padding-right 10px;
        color: $dark-grey-font;
        background: $light-grey-bg;
        font-size: 12px;
        line-height: 25px;
        height: 30px;
        border-radius: 4px;
        i
          left: 0;
          height: 25px;
          line-height: 25px;
          position: absolute;
          top: 3px;
          width: 30px;
      &.social
        i
          width: 100%;

      button[name="next"]
        color: $white;
        background: $green-really;
        padding: 3px 10px 3px 32px;
        text-transform: uppercase;
        letter-spacing: 1px;
        &:active
          background: lighten($green, 5%);

  &.zoomed .images figure
    cursor: -moz-grab;

    img
      position: absolute;
      width: 1200px;

  &.dragging .images figure
    cursor: -moz-grabbing;

  &.no-annotations .controls .finished .nothing-label
    display: inline-block;

  &.finished
    .images .extra-message
      display: block;

    .controls
      display: none;

    .followup
      display: block;

.signed-in .subject-viewer .images
  .favorite
    display: inline;

.characteristic-filters
  clearfix();
  padding: 5px 0;
  margin-bottom: 5px;
  position: relative;

  .filter-menu
    box-sizing: border-box;
    float: left;
    margin-left: 7px;
    width: 33.33%;
    margin 0;
    text-align: center;

    [data-language="pl_pl"] &,
    [data-language="fi_fi"] &
      font-size: 13px;
      letter-spacing: -1px;

    &:first-child
      margin-left: 0;

    button[name="characteristic"]
      @extend #standard-button;
      @extend .light-grey-btn;
      font-size: 12px;
      height: 30px;
      overflow: hidden;
      padding: 0;
      position: relative;
      text-overflow: ellipsis;
      white-space: nowrap;
      float: left;
      width: 95%

    .menu
      background: #eee;
      border-radius: 5px;
      bottom: 100%;
      box-sizing: border-box;
      font-size: 12px;
      height: 50px;
      left: 0;
      opacity: 1;
      position: absolute;
      width: 100%;
      z-index: 1;

      &.hidden
        display: none;

      button[name="characteristic-value"]
        /*background: url("images/characteristics-values.png");*/
        float: left;
        height: 40px;
        margin: 2px 0 0 5px;
        position: relative;
        width: 40px;
        background-position: center;
        background-repeat: no-repeat;

        &.selected
          border: 1px solid $gold;
          margin: 3px 0 0 4px;

        &[value="coatTanYellow"]
          background-image: url(images/characteristics-values/coatTanYellow.svg)

        &[value="coatRedBrown"]
          background-image: url(images/characteristics-values/coatRedBrown.svg)

        &[value="coatBrownBlack"]
          background-image: url(images/characteristics-values/coatBrownBlack.svg)

        &[value="coatGrayBlack"]
          background-image: url(images/characteristics-values/coatGrayBlack.svg)

        &[value="coatMottled"]
          background-image: url(images/characteristics-values/coatMottled.svg)

        &[value="coatSolid"]
          background-image: url(images/characteristics-values/coatSolid.svg)

        &[value="coatOrTailStriped"]
          background-image: url(images/characteristics-values/coatOrTailStriped.svg)

        &[value="tailBushy"]
          background-image: url(images/characteristics-values/tailBushy.svg)

        &[value="tailSmooth"]
          background-image: url(images/characteristics-values/tailSmooth.svg)

        &[value="tailLong"]
          background-image: url(images/characteristics-values/tailLong.svg)

        &[value="buildStocky"]
          background-image: url(images/characteristics-values/buildStocky.svg)

        &[value="buildTall"]
          background-image: url(images/characteristics-values/buildTall.svg)

        &[value="buildLanky"]
          background-image: url(images/characteristics-values/buildLanky.svg)

        &[value="buildSmall"]
          background-image: url(images/characteristics-values/buildSmall.svg)

        &[value="buildLowSlung"]
          background-image: url(images/characteristics-values/buildLowSlung.svg)

        .label
          bottom: 100%;
          border-radius: 3px;
          color: white;
          display: none;
          font-size: 10px;
          font-weight: bold;
          left: 50%;
          margin: 0 0 3px -10px;
          padding: 2px 10px;
          position: absolute;
          white-space: nowrap;
          z-index: 1;

          &:after
            border: 5px solid transparent;
            border-top-color: #ff6600;
            content: "";
            left: 5px;
            position: absolute;
            top: 100%;

        &:hover .label
          display: block;
          background-color: #ff6600;

      button[name="clear-characteristic"]
        @extend #standard-button;
        color: $white;
        background-color: #f60;
        height: 30px;
        float: right;
        margin: 9px 10px 10px 10px;
        border-radius: 4px;
        text-align: center;
        &:hover
          background-color: $red;

    &.open button[name="characteristic"]
      color: $white;

    &.in-use button[name="characteristic"]
      font-weight: bold;
