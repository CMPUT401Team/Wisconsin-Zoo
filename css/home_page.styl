.home-page {
  clearfix();
  color: $white;
  font-size: 14px;
  margin: 0 auto;
  text-shadow: 0 1px 1px $black;
  width: 1000px;

  .recents {
    float: left;
    text-align: center;
    width: 600px;

    .images {
      margin-bottom: 1em;
      position: relative;

      figure {
        border: 5px solid $white;
        box-shadow: 0 2px 5px $black;
        box-sizing: border-box;
        margin: 0;
        opacity: 0.75;
        overflow: hidden;
        left: 0;
        position: absolute;
        top: 0;
        transition: opacity 0.5s ease-in-out, transform 0.5s ease-in-out;
        width: 600px;

        &.active {
          z-index: 1;
          opacity: 1;
          position: relative;
          transform: none;
        }

        &.before {
          transform: rotate(2deg) translateX(10px);
        }

        &.after {
          transform: rotate(-3deg) translateX(-15px);
        }

        img {
          display: block;
          max-width: 100%;
        }
      }
    }

    .toggles {
      button[name="toggle"] {
        standard-toggle();
      }
    }
  }

  .introduction {
    float: left;
    margin: 50px;
    width: 300px;

    h1 {
      font-size: 30px;
      font-weight: normal;
      line-height: 1;
    }

    a.action {
      standard-button($red);
      outer-deboss: 5px;
      padding: 5px 25px;
    }
  }
}
