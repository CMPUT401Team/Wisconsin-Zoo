.home-page
  clearfix();
  color: $white;
  font-size: 14px;
  margin: 0 auto;
  padding: 0;

  .home-section
    overflow: auto;
    width: 50%;
    min-height: 500px;
    position: relative;

    .content
      padding: 130px 100px 0 100px;
      font-weight: 300;
      p
        line-height: 1.5em;
        margin: 0 auto 20px auto;
      .action
        margin-top: 25px;

        a
          @extend #standard-button;
          height: 60px;
          line-height: 60px;
          text-shadow: none;
          border-radius: 5px;
          letter-spacing: 1px;
          font-size: 14px;
          background: $medium-blue;
          color: $white;
          padding: 0px 50px;

    &.left
      background: url("./images/chi-img.jpg");
      float: left;
      .content
        h1
          font-size: 60px;
          line-height: 60px;
          margin: 0 auto 20px auto;
          font-weight: 300;

    &.right
      float: right;
      color: #50504e;
      background-color: $light-blue;
      .content
        h2
          color: #fff;
          font-weight: 300;
          font-size: 16px;
          margin: 0 auto 20px auto;

  .snapshot-chicago-stats
    background: url("./images/stats-skyline.png") no-repeat 50%;
    background-color: $white;
    display: block;
    width: 100%;
    overflow: auto;
    float: left;
    .content
      wrap(960px)
      overflow: auto;
      padding: 30px 0;
      text-align: center;
      h1
        color: #a8a8a8;
        font-weight: 100;
        letter-spacing: 2px;
        font-size: 14px;
      .quarter
        float: left;
        width: 25%;
        h2
          color: $medium-blue
          margin: 10px auto;
          font-size: 40px;
          font-weight: 300;
        p
          color: $dark-grey-font;
          font-size: 16px;
          font-weight: 300;
          letter-spacing: 2px;

  .home-pre-footer
    background-color: $medium-blue;
    overflow: auto;
    float: left;
    padding: 60px 0;
    width: 100%;
    text-align: center;
    .content
      overflow: auto;
      .third
        width: 33%;
        vertical-align: middle;
        display: inline-block;
        margin 20px auto;
        @media $tablet-or-smaller
          width: 100%;
    p
      max-width: 720px;
      margin: 60px auto 0 auto;
      display: block;
      font-size: 16px;
      line-height: 1.5em;

  @media $desktop-or-smaller
    .home-section
      width: 100%;
      .content
        text-align: center;

    .snapshot-chicago-stats
      .content
        width: 100%;

  @media $tablet-or-smaller
    .home-section
      .content
        padding: 130px 10px 0 10px;

    .snapshot-chicago-stats
      .content .quarter
        width: 100%;

  // TODO:LPZ: delete everything below this line?
  .recents {
    float: left;
    position: relative
    text-align: center;
    width: 600px;

    .images {
      margin-bottom: 1em;
      position: relative;

      figure {
        background: gray
        border: 5px solid $white;
        box-shadow: 0 2px 5px $black;
        box-sizing: border-box;
        // height: 420px;
        margin: 0;
        overflow: hidden;
        left: 0;
        position: absolute;
        top: 0;
        transition: transform 0.5s ease-out;
        width: 600px;

        &.active {
          z-index: 1;
          position: relative;
          transform: none;
        }

        &.before {
          transform: rotate(-1deg) translateX(-7px);

          & + .before {
            transform: rotate(-3deg) translateX(-10px);
          }
        }

        &.after {
          transform: rotate(4deg) translateX(7px);

          & + .after {
            transform: rotate(6deg) translateX(10px);
          }
        }

        img {
          display: block;
          max-width: 100%;
        }
      }
    }

    .toggles {
      button[name="toggle"] {
        @extend #standard-toggle;
      }
    }
  }

  .introduction {
    float: left;
    margin: 0 50px;
    width: 300px;

    h1 {
      font-size: 30px;
      font-weight: normal;
      line-height: 1;
    }

    .progress {
      p {
        margin: 0.25em;
      }

      .season {
        display: inline-block;
        vertical-align: middle;
        width: 75px;
      }

      .track {
        display: inline-block;
        height: 6px;
        outer-deboss: 2px;
        position: relative;
        vertical-align: middle;
        width: 205px;

        &:before {
          border-radius: 5px;
        }

        .fill {
          background: $green-really;
          border-radius: 5px;
          bottom: 0;
          box-shadow: 0 1px 1px rgba($white, 0.5) inset;
          left: 0;
          max-width: 100%;
          position: absolute;
          top: 0;
          transition: width 0.5s ease-in;
        }
      }
    }

    .all-seasons-complete {
      background: linear-gradient(top, darken($green-really, 10%), $green-really);
      border-radius: 2px;
      box-shadow: 0 1px 3px rgba($black, 0.33);
      font-size: 12px;
      margin: 0 -3px;
      padding: 1px 15px;
      position: relative;
      text-shadow: none;
    }
  }

