.home-page {
  clearfix();
  color: $white;
  font-size: 14px;
  margin: 0 auto;
  text-shadow: 0 1px 1px $black;
  width: 1000px;

  .recents {
    float: left;
    position: relative
    text-align: center;
    width: 600px;

    .images {
      margin-bottom: 1em;
      position: relative;

      figure {
        background: gray
        border: 5px solid $white;
        box-shadow: 0 2px 5px $black;
        box-sizing: border-box;
        // height: 420px;
        margin: 0;
        overflow: hidden;
        left: 0;
        position: absolute;
        top: 0;
        transition: transform 0.5s ease-out;
        width: 600px;

        &.active {
          z-index: 1;
          position: relative;
          transform: none;
        }

        &.before {
          transform: rotate(-1deg) translateX(-7px);

          & + .before {
            transform: rotate(-3deg) translateX(-10px);
          }
        }

        &.after {
          transform: rotate(4deg) translateX(7px);

          & + .after {
            transform: rotate(6deg) translateX(10px);
          }
        }

        img {
          display: block;
          max-width: 100%;
        }
      }
    }

    .toggles {
      button[name="toggle"] {
        @extend #standard-toggle;
      }
    }
  }

  .introduction {
    float: left;
    margin: 0 50px;
    width: 300px;

    h1 {
      font-size: 30px;
      font-weight: normal;
      line-height: 1;
    }

    .progress {
      p {
        margin: 0.25em;
      }

      .season {
        display: inline-block;
        vertical-align: middle;
        width: 75px;
      }

      .track {
        display: inline-block;
        height: 6px;
        outer-deboss: 2px;
        position: relative;
        vertical-align: middle;
        width: 205px;

        &:before {
          border-radius: 5px;
        }

        .fill {
          background: $green-really;
          border-radius: 5px;
          bottom: 0;
          box-shadow: 0 1px 1px rgba($white, 0.5) inset;
          left: 0;
          max-width: 100%;
          position: absolute;
          top: 0;
          transition: width 0.5s ease-in;
        }
      }
    }

    .all-seasons-complete {
      background: linear-gradient(top, darken($green-really, 10%), $green-really);
      border-radius: 2px;
      box-shadow: 0 1px 3px rgba($black, 0.33);
      font-size: 12px;
      margin: 0 -3px;
      padding: 1px 15px;
      position: relative;
      text-shadow: none;
    }

    .action {
      margin-top: 25px;

      a {
        @extend #standard-button;
        height: 40px;
        line-height: 40px;
        text-shadow: none;
        border-radius: 5px;
        background: $red;
        color: $white;
        padding: 0px 25px;
      }
    }
  }
}

