.image-switcher {
  display: inline-block;
  float: left;

  &:focus {
    // For now, so Miller doesn't kill me.
    // TODO: Make it clear that this is in focus.
    outline: 0;
  }

  .images {
    position: relative;

    figure {
      border: 5px solid $white;
      box-sizing: border-box;
      height: 410px;
      left: 0;
      margin: 0;
      opacity: 0;
      overflow: hidden;
      position: absolute;
      top: 0;
      width: 580px;

      &.active {
        box-shadow: 0 3px 5px rgba($black, 0.33);
        opacity: 1;
        position: relative;
        z-index: 1;
      }

      &.satellite {
        left: 0;
        position: absolute;
        top: 0;
      }

      img {
        display: block;
        width: 100%;
      }
    }

    .annotations {
      color: $white;
      font-size: 12px;
      font-weight: bold;
      position: absolute;
      right: 10px;
      text-align: right;
      text-shadow: 0 0 1px $black, 0 0 1px $black, 0 0 1px $black, 0 0 2px $black, 0 0 2px $black;
      top: 10px;
      z-index: 1;

      .annotation-item {
        border-radius: 20px;
        padding: 0 5px 0 10px;

        &:hover {
          background: rgba($black, 0.75);
        }

        button[name="delete"] {
          border-radius: 50%;
          height: 1em;
          line-height: 1em;
          text-align: center;
          width: 1em;
        }
      }
    }
  }

  .controls {
    color: darken($brown, 75%);
    line-height: 1;
    margin-top: 5px;
    position: relative;
    text-align: center;
    text-shadow: 0 1px 1px rgba($white, 0.5);

    .group {
      border-left: 1px solid rgba($white, 0.25);
      box-shadow: -2px 0 0 -1px rgba($black, 0.33);
      display: inline-block;
      height: 1em;
      margin-left: 10px;
      padding-left: 10px;

      &:first-child {
        border-left: 0;
        box-shadow: none;
        margin-left: 0;
        padding-left: 0;
      }
    }

    .play {
      font-size: 14px;

      button[name="pause"] {
        display: none;
      }
    }

    button[name="toggle"] {
      color: transparent;
      height: 20px;
      position: relative;
      text-shadow: none;
      width: 20px;

      &:before {
        background: rgba($black, 0.5);
        border-radius: 50%;
        box-shadow: 0 1px 0 rgba($black, 0.5) inset, 0 1px 0 rgba($white, 0.5);
        content: ' ';
        height: 10px;
        left: 50%;
        margin: -5px 0 0 -5px;
        overflow: hidden;
        position: absolute;
        top: 50%;
        width: 10px;
      }

      &.active:after {
        background: rgba($white, 0.5);
        border-radius: 50%;
        box-shadow: 0 1px 0 $white inset;
        content: ' ';
        height: 6px;
        left: 50%;
        margin: -3px 0 0 -3px;
        overflow: hidden;
        position: absolute;
        top: 50%;
        width: 6px;
      }
    }

    button[name="satellite"] {
      border-radius: 50%;

      &.active {
        color $white;
        text-shadow: 0 1px 1px $black;
      }
    }

    .sign-in {
      button[name="sign-in"] {
        standard-button();
        font-size: 10px;
      }
    }

    .favorite {
      display: none;

      button[name="favorite"],
      button[name="unfavorite"] {
        font-size: 16px;
      }

      button[name="unfavorite"] {
        color: $gold;
        display: none;
        text-shadow: 0 1px 1px $black;
      }
    }
  }

  &.playing .controls .play {
    button[name="play"] {
      display: none;
    }

    button[name="pause"] {
      display: inline-block;
    }
  }

  &.favorite .controls .favorite {
    button[name="favorite"] {
      display: none;
    }

    button[name="unfavorite"] {
      display: inline-block;
    }
  }
}

.signed-in .image-switcher .controls {
  .sign-in {
    display: none;
  }

  .favorite {
    display: inline;
  }
}
