.home-page
  clearfix();
  color: $white;
  font-size: 14px;
  margin: 0 auto;
  padding: 0;

  .home-section
    overflow: auto;
    width: 50%;
    min-height: 500px;
    position: relative;

    .content
      padding: 130px 100px 0 100px;
      font-weight: 300;
      p
        line-height: 1.5em;
        margin: 0 auto 20px auto;
      .action
        margin-top: 25px;

        a
          @extend #standard-button;
          height: 60px;
          line-height: 60px;
          text-shadow: none;
          border-radius: 5px;
          letter-spacing: 1px;
          font-size: 14px;
          background: $green-medium;
          color: $white;
          padding: 0px 50px;

    &.left
      background: url(images/home.jpg) no-repeat
      position: relative
      float: left

      &:before
        background: linear-gradient(0deg, rgba($green-really, 0.4), rgba($green-really, 0.4))
        content: " "
        height: 100%
        left: 0
        position: absolute
        top: 0
        width: 100%

      .content
        position: relative

        h1
          font-size: 60px
          line-height: 60px
          margin: 0 auto 20px auto
          font-weight: 300

    &.right
      float: right;
      color: $gray;
      .content
        h2
          color: #fff;
          font-weight: 300;
          font-size: 16px;
          margin: 0 auto 20px auto;

  .project-stats
    background-color: $white;
    display: block;
    width: 100%;
    overflow: auto;
    float: left;
    .content
      wrap(960px)
      overflow: auto;
      padding: 30px 0;
      text-align: center;
      h1
        color: #a8a8a8;
        font-weight: 100;
        letter-spacing: 2px;
        font-size: 14px;
      .quarter
        float: left;
        width: 25%;
        h2
          color: $green
          margin: 10px auto;
          font-size: 40px;
          font-weight: 300;
        p
          color: $dark-grey-font;
          font-size: 16px;
          font-weight: 300;
          letter-spacing: 2px;

  .home-pre-footer
    background-color: $medium-blue;
    overflow: auto;
    float: left;
    padding: 60px 0;
    width: 100%;
    text-align: center;
    .content
      overflow: auto;
      .third
        width: 33%;
        vertical-align: middle;
        display: inline-block;
        margin 20px auto;
        @media $tablet-or-smaller
          width: 100%;
    p
      max-width: 720px;
      margin: 60px auto 0 auto;
      display: block;
      font-size: 16px;
      line-height: 1.5em;

  @media $desktop-or-smaller
    .home-section
      width: 100%;
      .content
        text-align: center;

    .snapshot-chicago-stats
      .content
        width: 100%;

  @media $tablet-or-smaller
    .home-section
      .content
        padding: 130px 10px 0 10px;

    .snapshot-chicago-stats
      .content .quarter
        width: 100%;

